{
	"name": "fluxbb/fluxbb",
	"description": "Fast, light, user-friendly and extensible forum software.",
	"keywords": ["forum", "fluxbb", "laravel"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.1.*",
		"fluxbb/core": "@dev",
		"fluxbb/installer": "@dev"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
